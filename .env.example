# FastAPI Settings
APP_NAME=ReadingAppAPI
APP_ENV=local
DEBUG=true

# Security / Auth
SECRET_KEY=replace_with_long_random_string
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080
ALGORITHM=HS256

# Database
DATABASE_URL=mysql+pymysql://user:password@localhost:3306/reading_app
TEST_DATABASE_URL=sqlite+aiosqlite:///:memory:

# Email / Support (placeholders)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_user
SMTP_PASSWORD=your_password
SUPPORT_INBOX=support@example.com

# Analytics toggle
ENABLE_ANALYTICS=true

# External Services (future)
EXTERNAL_BOOK_API_BASE=https://api.example.com
GOOGLE_BOOKS_API_KEY=your_google_books_api_key_here
